{
  "openapi": "3.0.0",
  "info": {
    "title": "Veracity Store API",
    "version": "0.0.0",
    "description": "API documentation for the Veracity Store"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Local server"
    }
  ],
  "tags": [
    {
      "name": "checks",
      "description": "Veracity check storing"
    },
    {
      "name": "facts",
      "description": ""
    },
    {
      "name": "auth",
      "description": ""
    }
  ],
  "paths": {
    "/checks": {

      "get": {
        "tags": [
          "checks"
        ],
        "operationId": "listChecks",
        "summary": "List shared results",
        "description": "Lists the shared results of an organization",
        "parameters": [
          {
            "name": "organization",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/checks/{organization}/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "organization",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "tags": [
          "checks"
        ],
        "operationId": "getCheck",
        "summary": "Get a shared result",
        "description": "Gets a shared result from a partner organization by id",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      },
      "put": {
        "tags": [
          "checks"
        ],
        "operationId": "shareCheck",
        "summary": "Share a veracity check result",
        "description": "Shares a veracity check result with a specified organization",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "result": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully created"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      },
      "patch": {
        "tags": [
          "checks"
        ],
        "operationId": "approveCheck",
        "summary": "Approve or disapprove a result",
        "description": "Approves or disapproves a shared check result",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "approved": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/checks/{id}/approve": {},
    "/facts": {
      "get": {
        "tags": [
          "facts"
        ],
        "operationId": "listFacts",
        "summary": "List facts",
        "description": "Lists the facts of all the checks that have been uploaded",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "operationId": "login",
        "summary": "User login",
        "description": "Logs in a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "username",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}